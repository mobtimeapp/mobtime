{
  "name": "mobtime",
  "version": "1.4.0",
  "main": "index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrozbarry/mobtime.git"
  },
  "scripts": {
    "dev": "nodemon --ignore public ./index.js",
    "tailwind": "tailwindcss build -i ./src/styles/index.css -o ./public/styles/styles.css",
    "start": "node ./index.js",
    "lint": "prettier-eslint --write \"./src/**/*.js\" \"./public/**/*.js\"",
    "deploy": "node ./deploy/index.js",
    "test": "ava",
    "test:coverage": "nyc ava",
    "prepare": "husky install"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "esm": "^3.2.25",
    "express": "^4.17.2",
    "ferp": "^2.1.2",
    "helmet": "^4.6.0",
    "nodemon": "^2.0.15",
    "postcss": "^8.4.5",
    "prettier-eslint-cli": "^5.0.1",
    "redis": "^4.0.1",
    "tailwindcss": "^3.0.15",
    "ws": "^8.4.0"
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "husky": "^7.0.0",
    "lint-staged": "12.1.4",
    "nyc": "^15.1.0",
    "sinon": "^12.0.1"
  },
  "ava": {
    "files": [
      "src/**/*.test.js",
      "public/**/*.test.js"
    ],
    "concurrency": 8,
    "failFast": true,
    "failWithoutAssertions": true,
    "require": [
      "esm"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true
  },
  "private": true,
  "lint-staged": {
    "*.js": "prettier-eslint --write"
  }
}
